#! /bin/sh

set -e

while [ $# -gt 0 ]
do
    case "$1" in
        -w)  WATCH=--watch;;
        -d)  DEBUG=--debug;;
        -D)  DEBUG=--debug-brk;;
        -g)  GREP="-g $2"; shift;;
        --)	shift; break;;
        -*)
            echo >&2 \
            "usage: $0 [-w] [-g REGEXP]"
            exit 1;;
        *)  break;;	# terminate while loop
    esac
    shift
done

export MADEYE_AZKABAN_PORT=4005
export MADEYE_TEST=1

find tests -name '*Test.coffee' -print0 | xargs -0 bin/mochac $DEBUG $BREAK $WATCH $GREP
